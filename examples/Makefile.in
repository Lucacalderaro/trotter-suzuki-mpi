# @configure_input@

# Package-related substitution variables
package	= @PACKAGE_NAME@
version	= @PACKAGE_VERSION@
tarname	= @PACKAGE_TARNAME@
distdir	= $(tarname)-$(version)

# Prefix-related substitution variables
prefix	 = @prefix@
exec_prefix    = @exec_prefix@
bindir	 = @bindir@
libdir	 = @libdir@

# Tool-related substitution variables
CXX		         = @CXX@
CXXFLAGS       = @CXXFLAGS@
LIBS	         = @LIBS@
DEFS           = @DEFS@
INSTALL	       = @INSTALL@
INSTALL_DATA   = @INSTALL_DATA@
INSTALL_PROGRAM= @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
CUDA_CFLAGS    = @CUDA_CFLAGS@
CUDA_LIBS      = @CUDA_LIBS@
CUDA_LDFLAGS   = @CUDA_LDFLAGS@
NVCC       	   = @NVCC@
MPI_INC        = @MPI_INC@
MPI_LIBDIR     = @MPI_LIBDIR@
MPI_LIBS       = @MPI_LIBS@

# VPATH-related substitution variables
srcdir	 = ./../src

LIBOBJS=$(srcdir)/common.o $(srcdir)/cpublock.o $(srcdir)/trotter.o

ifdef CUDA_LIBS
	LIBOBJS+=$(srcdir)/cc2kernel.cu.co $(srcdir)/hybrid.cu.co
endif

BOX_OBJS_1 = $(LIBOBJS) gaussian-like_initial_state.o
BOX_OBJS_2 = $(LIBOBJS) sinusoid_initial_state.o
BOX_OBJS_3 = $(LIBOBJS) exponential_initial_state.o
IMAG_EVO = $(LIBOBJS) imag_evolution.o
BEC = $(LIBOBJS) groundstate_of_BEC_in_harmonic_pot.o
VORTEXES = $(LIBOBJS) vortexes.o

all example: box1 box2 box3 ievo bec_trap vortexes

box1: $(BOX_OBJS_1)
	$(CXX) $(DEFS) $(CXXFLAGS) $(CUDA_LDFLAGS) ${MPI_LIBDIR} -I.. -o gaussian-like_initial_state $^ $(LIBS) $(CUDA_LIBS) ${MPI_LIBS} 

box2: $(BOX_OBJS_2)
	$(CXX) $(DEFS) $(CXXFLAGS) $(CUDA_LDFLAGS) ${MPI_LIBDIR} -I.. -o sinusoid_initial_state $^ $(LIBS) $(CUDA_LIBS) ${MPI_LIBS} 

box3: $(BOX_OBJS_3)
	$(CXX) $(CXXFLAGS) $(CUDA_LDFLAGS) ${MPI_LIBDIR} -I.. -o exponential_initial_state $^ $(LIBS) $(CUDA_LIBS) ${MPI_LIBS} 

ievo: $(IMAG_EVO)
	$(CXX) $(DEFS) $(CXXFLAGS) $(CUDA_LDFLAGS) ${MPI_LIBDIR} -I.. -o imag_evolution $^ $(LIBS) $(CUDA_LIBS) ${MPI_LIBS} 

bec_trap: $(BEC)
	$(CXX) $(DEFS) $(CXXFLAGS) $(CUDA_LDFLAGS) ${MPI_LIBDIR} -I.. -o groundstate_of_BEC_in_harmonic_pot $^ $(LIBS) $(CUDA_LIBS) ${MPI_LIBS}

vortexes: $(VORTEXES)$
	$(CXX) $(DEFS) $(CXXFLAGS) $(CUDA_LDFLAGS) ${MPI_LIBDIR} -I.. -o vortexes $^ $(LIBS) $(CUDA_LIBS) ${MPI_LIBS}

%.o: %.cpp
	$(CXX) $(DEFS) $(CXXFLAGS) $(CUDA_LDFLAGS) ${MPI_LIBDIR} -I.. -I$(srcdir) -o $@ -c $^ 

$(srcdir)/%.o: $(srcdir)/%.cpp
	$(MAKE) -C $(srcdir) $@

$(srcdir)/%.cu.co: $(srcdir)/%.cu
	$(MAKE) -C $(srcdir) $@

clean:
	-rm -f gaussian-like_initial_state sinusoid_initial_state exponential_initial_state imag_evolution two_particles_exponential_initial_state groundstate_of_BEC_in_harmonic_pot $(BOX_OBJS_1) $(BOX_OBJS_2) $(BOX_OBJS_3) $(IMAG_EVO) $(BEC) 1>/dev/null
